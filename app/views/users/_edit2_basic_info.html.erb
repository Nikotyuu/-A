<% provide(:class_text, 'basic2-info') %>
<% provide(:button_text, '更新') %>

<div class="modal-dialog modal-lg modal-dialog-center">
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
      <h5 class="modal-title"><%= @user.name %>からの勤怠変更申請</h5>
    </div>
    <div class="modal-body">
      <div class="row">
        <div class="col-md-6 col-md-offset-3">
          <%= form_with(model: @user, url: update_basic_info_user_path(@user), local: true, method: :patch) do |f| %>
            <%= render 'shared/error_messages', object: @user %>
            <table class="table table-bordered table-condensed" id="table-attendances">
                <tr>
                  <td rowspan="3">日付</td>
                  <td rowspan="3">曜日</td>
                  <td colspan="4">変更前</td>
                  <td colspan="4">変更後</td>
                  <td rowspan="3">備考</td>
                  <td rowspan="3">指示者確認㊞</td>
                  <td rowspan="3">変更</td>
                  <td rowspan="3">勤怠を確認する</td>
                </tr>
                <tr>
                  <td colspan="2">出社</td>
                  <td colspan="2">退社</td>
                  <td colspan="2">出社</td>
                  <td colspan="2">退社</td>
                </tr>
                <tr>
                  <td>時</td>
                  <td>分</td>
                  <td>時</td>
                  <td>分</td>
                  <td>時</td>
                  <td>分</td>
                  <td>時</td>
                  <td>分</td>
                </tr>
                <tr>
                  <td></td>
                  <td></td>
                  <td></td>
                  <td></td>
                  <td></td>
                  <td></td>
                  <td></td>
                  <td></td>
                  <td></td>
                  <td></td>
                  <td></td>
                  <td></td>
                  <td></td>
                  <td></td>
                </tr>
            </table>

            <div class="center">
              <%= f.submit yield(:button_text), class: "btn btn-primary btn-#{yield(:class_text)}" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>