<% provide(:class_text, 'basis-info') %>
<% provide(:button_text, '編集') %>
<div class="modal-dialog modal-lg modal-dialog-center">
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
      <h1 class="modal-title">編集</h1>
    </div>
    <div class="modal-body">
      <div class="row">
        <div class="col-md-6 col-md-offset-3">
           <%= form_with(model: @base, url: basis_path(@base), local: true, method: :patch) do |f| %>
           <table class="table table-bordered table-condensed">
              <tr>
                <td><%= f.label :base_id, class: "label-#{yield(:class_text)}" %>
                    <%= f.text_field :base_id, class: "form-control", placeholder: "拠点番号を記入してください" %></td>
                    
                <td><%= f.label :name, class: "label-#{yield(:class_text)}" %>
                    <%= f.text_field :name, class: "form-control", placeholder: "拠点名を記入してください" %></td>
                    
                <td><%= f.label :attendance_sort, class: "label-#{yield(:class_text)}" %></br>
                    <%= f.select :attendance_sort, [["選択してください" ],["出勤"],["退勤"]] %>
                </td>
              </tr>
            </table>
            <div class="center">
              <%= f.submit yield(:button_text), class: "btn btn-primary btn-#{yield(:class_text)}" %>
              <button type="button" class="btn btn-default btn-<%= yield(:class_text) %>" data-dismiss="modal">キャンセル</button>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>