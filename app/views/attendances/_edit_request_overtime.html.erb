<% provide(:class_text, 'request_overtime') %>
<% provide(:button_text, '変更を送信する') %>

<div class="modal-dialog modal-lg modal-dialog-center">
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
      <h1 class="modal-title">【<%= @user.name %>からの残業申請】</h1>
    </div>
    <div class="modal-body">
      <div class="row">
        <div class="col-md-10 col-md-offset-1">
          <%= form_with(model: @attendance, url: update_request_overtime_user_attendance_path, local: true, method: :patch) do |f| %>
         
          <table class="table table-bordered table-condensed table-hover" id="table-attendances">
             <tr>
               <td>日付</td>
               <td>曜日</td>
               <td>終了予定時間</td>
               <td>指定勤務終了時間</td>
               <td>時間外時間</td>
               <td>業務処理内容</td>
               <td>指示者確認㊞</td>
               <td>変更</td>
               <td>申請を確認する</td>
             </tr>
             <tr>
               <td></td>
               <td></td>
               <td></td>
               <td></td>
               <td></td>
               <td></td>
               <td><%= f.select :decision, Attendance.decisions.keys.to_a %></td>
               <td><%= f.check_box :yokuzitu, id: "remember_me" %></td>
               <td></td>
             </tr>   
              
          </table>   
            <div class="center">
              <%= f.submit yield(:button_text), class: "btn btn-primary btn-#{yield(:class_text)}" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>